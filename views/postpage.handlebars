<header>
  <nav class="navbar navbar-expand-lg header-custom mb-5 shadow">
    <a data-nav="home" class="navbar-brand text-white" href="#">Tech Blog</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a data-nav="home" class="nav-link text-white" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a data-nav="dashboard" class="nav-link text-white" href="#">Dashboard</a>
        </li>
        {{#if logged_in}}
        <li class="nav-item">
          <a data-nav="logout" class="nav-link text-white" href="#">Logout</a>
        </li>
        {{else}}
        <li class="nav-item">
          <a data-nav="login" class="nav-link text-white" href="#">Login</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </nav>
</header>
<main>
  <div id="post" data-post="{{post.id}}" class="card mt-5 col-10 mx-auto p-0 text-center shadow">
      <div class="card-header pb-0 card-header-custom">
        <h2>
          {{ post.title }}
        </h2>
        <p class="small text-muted">
          Posted by {{ post.user }} on {{ format_date post.createdAt }}
        </p>
      </div>
      <div class="card-body text-center">
        <p class="card-text">
          {{ post.content }}
        </p>
      </div>
  </div>
  <div class="card mt-5 col-5 mx-auto p-0 text-center shadow">
      <div class="card-header p-4 card-header-custom">
      </div>
      <div class="card-body text-center">
        <form id="comment">
          <div class="form-group">
            <label class="h4" for="comment">Comment</label>
            <input type="text" class="form-control" placeholder="The part where..." id="comment-content">
            <small id="commentHelp" class="form-text text-muted">What are your thoughts on this post?</small>
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
  </div>
  {{#each comments as |comment|}}
  {{> comments}}
  {{/each}}
</main>
<script src="/js/comment.js"></script>