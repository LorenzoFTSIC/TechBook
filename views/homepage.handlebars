<header>
  <nav class="navbar navbar-expand-lg header-custom mb-5 shadow">
    <a data-nav="home" class="navbar-brand text-white" href="#">Tech Blog</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a data-nav="home" class="nav-link text-white" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a data-nav="dashboard" class="nav-link text-white" href="#">Dashboard</a>
        </li>
        {{#if logged_in}}
        <li class="nav-item">
          <a data-nav="logout" class="nav-link text-white" href="#">Logout</a>
